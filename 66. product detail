#include <stdio.h>

struct Product {
    int pid;
    char name[30];
    float price;
};

int main() {
    struct Product p;

    printf("Enter Product ID: ");
    scanf("%d", &p.pid);
    printf("Enter Product Name: ");
    scanf("%s", p.name);
    printf("Enter Price: ");
    scanf("%f", &p.price);

    printf("\nProduct Details:\n");
    printf("ID: %d\nName: %s\nPrice: %.2f\n",
           p.pid, p.name, p.price);
    return 0;
}
