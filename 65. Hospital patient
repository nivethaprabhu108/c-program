#include <stdio.h>

struct Patient {
    int pid;
    char name[30];
    int age;
};

int main() {
    struct Patient p;

    printf("Enter Patient ID: ");
    scanf("%d", &p.pid);
    printf("Enter Name: ");
    scanf("%s", p.name);
    printf("Enter Age: ");
    scanf("%d", &p.age);

    printf("\nPatient Details:\n");
    printf("ID: %d\nName: %s\nAge: %d\n", p.pid, p.name, p.age);
    return 0;
}
