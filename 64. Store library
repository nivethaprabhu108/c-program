#include <stdio.h>

struct Book {
    int bookId;
    char title[30];
    float price;
};

int main() {
    struct Book b;

    printf("Enter Book ID: ");
    scanf("%d", &b.bookId);
    printf("Enter Title: ");
    scanf("%s", b.title);
    printf("Enter Price: ");
    scanf("%f", &b.price);

    printf("\nBook Details:\n");
    printf("ID: %d\nTitle: %s\nPrice: %.2f\n",
           b.bookId, b.title, b.price);
    return 0;
}

